@model IEnumerable<SiteECommerce.Models.Company>
@{
    ViewBag.Title = "Companhia";
}
<h2>Lista de Companhia</h2>
<p>
    @Html.ActionLink("Adicioar companhia", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cities.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departament.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cities.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Logo))
                {
                    <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CompanyId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.CompanyId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.CompanyId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
